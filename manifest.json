{
    "manifest_version": 2,
    "name": "AgentFox",
    "version": "1.1",
    "description": "Randomize your user agent in all outgoing requests.",
    "icons": {
        "48": "icons/fox_48.png"
    },
    "permissions": [
        "storage",
        "webRequest",
        "declarativeNetRequest",
        "<all_urls>"
    ],
    "browser_action": {
        "default_popup": "view/settings.html",
        "default_icon": {
            "48": "icons/fox_48.png"
        }
    },
    "background": {
        "scripts": [
            "src/agent.js"
        ]
    }
}